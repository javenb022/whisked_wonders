<h1>Login</h1>
<br>
<%= form_with url: login_path, method: :post do |f| %>
  <%= f.label :email, 'Email' %>
  <%= f.email_field :email %>

  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>

  <%= f.submit 'Sign In' %>
<% end %>
<h2>New User?</h2>
<%= button_to 'Create an Account', new_user_path %>
